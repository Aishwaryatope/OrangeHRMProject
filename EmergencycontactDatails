package orangehrmproject;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.concurrent.TimeUnit;

import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Test;

public class Emergencycontact {
	public WebDriver driver;
    
    @BeforeTest
    public void System() {
    	System.setProperty("webdriver.chrome.driver", "C:\\Users\\Sumit\\Downloads\\chromedriver-win64\\chromedriver-win64\\chromedriver.exe");
    	 driver = new ChromeDriver();
    	 driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
    	 
    }
    @Test(priority=1,groups="loginpage")
    public void loginpageTest() {
    	driver.get( "https://opensource-demo.orangehrmlive.com/web/index.php/auth/login");
    	driver.manage().window().maximize();
    	FileInputStream d = null;
    	try {

			d = new FileInputStream("C:\\Users\\Sumit\\Desktop\\orange.xlsx");
		} catch (FileNotFoundException e) {
		}
    	
			XSSFWorkbook wb = null;
		try {	
				wb = new XSSFWorkbook(d);
		} catch (IOException e) {
			
		}
			 	
		XSSFSheet ws=wb.getSheet("Sheet1");
			    	
		//Username
    	String name=ws.getRow(1).getCell(1).getStringCellValue();
    	String username=ws.getRow(1).getCell(1).getStringCellValue();
    	driver.findElement(By.xpath(name)).sendKeys(username);
    	
    	//Password
    	String pwd=ws.getRow(2).getCell(1).getStringCellValue();
    	String pwd1=ws.getRow(2).getCell(2).getStringCellValue();
    	driver.findElement(By.xpath(pwd)).sendKeys(pwd1);
    	
    	//Login Button
    	String btn=ws.getRow(3).getCell(1).getStringCellValue();
    	driver.findElement(By.xpath(btn)).click();
    	try {
			Thread.sleep(3000);
		} catch (InterruptedException e) {
			
		}
		}
  	 @Test(priority = 2,groups ="emergencycontactdetails") 	    	
			public void Emergencycontactdetails () {  	
			    	
  		 FileInputStream d = null;
 		
	    	try {
			
				d = new FileInputStream("C:\\Users\\Sumit\\Desktop\\orange.xlsx");
			} catch (FileNotFoundException e) {
				
			
			}
	    	
				XSSFWorkbook wb = null;
			try {	
					wb = new XSSFWorkbook(d);
			} catch (IOException e) {
				
				
			}
	    	XSSFSheet ws=wb.getSheet("Sheet1");
	    	
	   	//My Info page
	    	String myinfo=ws.getRow(5).getCell(1).getStringCellValue();
	    	driver.findElement(By.xpath(myinfo)).click();	 
	    	driver.manage().timeouts().implicitlyWait(1000, TimeUnit.SECONDS);
	    	
	    //Add button
	    	String add_button=ws.getRow(43).getCell(1).getStringCellValue();
	    	driver.findElement(By.xpath(add_button)).click();	 
	    	driver.manage().timeouts().implicitlyWait(1000, TimeUnit.SECONDS);
	    	
	    //Name
	    	String name=ws.getRow(44).getCell(1).getStringCellValue();
	    	String name1=ws.getRow(44).getCell(2).getStringCellValue();
	    	driver.findElement(By.xpath(name)).sendKeys(name1);
	    	
	    //Relationship
	    	String relationship=ws.getRow(45).getCell(1).getStringCellValue();
	    	driver.findElement(By.xpath(relationship)).click();
	    	String ship=ws.getRow(45).getCell(2).getStringCellValue();
	    	driver.findElement(By.xpath(relationship)).sendKeys(ship);
	    	driver.manage().timeouts().implicitlyWait(3000, TimeUnit.SECONDS);
	    //home telephone	
	    	String telephone=ws.getRow(46).getCell(1).getStringCellValue();
	    	driver.findElement(By.xpath(telephone)).click();
	    	String tele_ph=ws.getRow(46).getCell(2).getStringCellValue();
	    	driver.findElement(By.xpath(telephone)).sendKeys(tele_ph);
	    	driver.manage().timeouts().implicitlyWait(3000, TimeUnit.SECONDS);
	    	
	    //mobile
	    	String mobile=ws.getRow(47).getCell(1).getStringCellValue();
	    	driver.findElement(By.xpath(mobile)).click();
	    	String mob=ws.getRow(47).getCell(2).getStringCellValue();
	    	driver.findElement(By.xpath(mobile)).sendKeys(mob);
	    	driver.manage().timeouts().implicitlyWait(3000, TimeUnit.SECONDS);
	    	
	    //Work number
	    	String work=ws.getRow(48).getCell(1).getStringCellValue();
	    	driver.findElement(By.xpath(work)).click();
	    	String work_no=ws.getRow(48).getCell(2).getStringCellValue();
	    	driver.findElement(By.xpath(work)).sendKeys(work_no);
	    	driver.manage().timeouts().implicitlyWait(3000, TimeUnit.SECONDS);
  		 
	    //Save emergencycontact	
	    	String emergency_contact_details_save=ws.getRow(49).getCell(1).getStringCellValue();
	    	driver.findElement(By.xpath(emergency_contact_details_save)).click();
	    	driver.manage().timeouts().implicitlyWait(1000, TimeUnit.SECONDS);
	    	
  	 }

               @AfterTest
               public void exit() {

               driver.close();
	    
	   	
  	 }	    
}
